<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="PostgreSQLContext" targetRuntime="MyBatis3">
        <!-- Kết nối DB -->
        <jdbcConnection driverClass="org.postgresql.Driver"
                        connectionURL="jdbc:postgresql://localhost:5432/test_db"
                        userId="postgres"
                        password="123456" />

        <!-- Sinh Model -->
        <javaModelGenerator targetPackage="com.java.TrainningJV.models" targetProject="src/main/java" />

        <!-- Sinh XML Mapper -->
        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources" />

        <!-- Sinh Mapper Interface -->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.java.TrainningJV.mappers" targetProject="src/main/java" />

        <!-- Chọn bảng -->

        <table tableName="products" domainObjectName="Product" />
    </context>
</generatorConfiguration>
