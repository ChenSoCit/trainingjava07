<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.java.TrainningJV.mappers.mapperCustom.ProductMapperCustom">
    <resultMap id="productResultMap" type="com.java.TrainningJV.models.Product">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <result property="price" column="price"/>
        <result property="stockQuantity" column="stock_quantity"/>
        <result property="createdAt" column="created_at"/>
        <result property="updatedAt" column="updated_at"/>
        <result property="categoryId" column="category_id"/>
    </resultMap>

    <select id="getAllProducts" resultMap="productResultMap">
        SELECT id, name, description, price, stock_quantity, created_at, updated_at, category_id
        FROM products
    </select>

</mapper>